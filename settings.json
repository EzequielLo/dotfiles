{
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineHeight": 1.6,
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.unicodeHighlight.invisibleCharacters": true,
  "eslint.alwaysShowStatus": true,
  "explorer.compactFolders": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "git.allowForcePush": true,
  "git.enableCommitSigning": true,
  "git.showPushSuccessNotification": true,
  "git.suggestSmartCommit": false,
  "gitlens.advanced.abbreviatedShaLength": 8,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "alternate",
  "javascript.referencesCodeLens.enabled": true,
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "notebook.lineNumbers": "on",
  "notebook.output.textLineLimit": 0,
  "prettier.endOfLine": "auto",
  "security.workspace.trust.enabled": false,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.fontWeight": 400,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "workbench.preferredLightColorTheme": "Default Light+",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "always",
  // exclude from fuzzy finder
  "search.exclude": {
    "**/.git": true,
    "**/.nuxt": true,
    "**/.svelte-kit": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  // languages
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".env": ".env, .env.example",
    ".gitignore": ".gitignore, .dockerignore",
    "vite.config.ts": "vitest.config.js, vitest.config.ts, vite.config.js, vite.config.ts",
    "tsconfig.json": "tsconfig.json, jsconfig.json",
    "*.csproj": "*.csproj, nuget.config"
  },
  "editor.fontFamily": "'JetBrains Mono'",
  "debug.console.fontFamily": "'JetBrains Mono', monospace",
  "editor.bracketPairColorization.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "window.customMenuBarAltFocus": false,
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "workbench.sideBar.location": "right",
  "window.zoomLevel": 1,
  "editor.wordWrap": "on",
  "files.autoSave": "onFocusChange",
  "window.restoreWindows": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "none",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "emmet.includeLanguages": {
    "javascript": "html"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.insertSpaces": false,
  "editor.comments.insertSpace": false,
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/local/bin/nvim",
  "git.confirmSync": false,
  "editor.cursorStyle": "line-thin",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "modus-vivendi",
  "window.menuBarVisibility": "compact",
  "editor.minimap.enabled": false
}
