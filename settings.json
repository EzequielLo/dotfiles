{
	"diffEditor.renderSideBySide": false,
	"editor.accessibilitySupport": "off",
	"editor.detectIndentation": true,
	"editor.fontFamily": "'JetBrainsMono Nerd Font', monospace",
	"debug.console.fontFamily": "'JetBrainsMono Nerd Font', monospace",
	"editor.inlineSuggest.enabled": true,
	"editor.lineHeight": 1.6,
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.smoothScrolling": true,
	"editor.suggestSelection": "first",
	"editor.unicodeHighlight.invisibleCharacters": true,
	"eslint.alwaysShowStatus": true,
	"explorer.compactFolders": false,
	"extensions.autoUpdate": "onlyEnabledExtensions",
	"extensions.ignoreRecommendations": true,
	"files.insertFinalNewline": true,
	"files.simpleDialog.enable": true,
	"git.allowForcePush": true,
	"git.enableCommitSigning": true,
	"git.suggestSmartCommit": false,

	"javascript.referencesCodeLens.enabled": true,
	"javascript.referencesCodeLens.showOnAllFunctions": true,
	"prettier.endOfLine": "auto",
	"security.workspace.trust.enabled": false,

	"telemetry.telemetryLevel": "off",
	"terminal.integrated.fontWeight": 400,
	"terminal.integrated.persistentSessionReviveProcess": "never",
	"terminal.integrated.tabs.enabled": true,
	"typescript.implementationsCodeLens.enabled": true,
	"typescript.referencesCodeLens.enabled": true,
	"window.dialogStyle": "custom",
	"window.titleBarStyle": "custom",
	"workbench.editor.closeOnFileDelete": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.list.smoothScrolling": true,
	"workbench.preferredDarkColorTheme": "Default Dark+",
	"workbench.preferredLightColorTheme": "GitHub Light Colorblind (Beta)",
	"workbench.sideBar.location": "right",
	"workbench.startupEditor": "none",
	"workbench.tree.indent": 14,
	"workbench.tree.renderIndentGuides": "always",
	// override some UI colours
	"workbench.colorCustomizations": {
		"[Default Dark+]": {
			"activityBar.background": "#15161f",
			"activityBarBadge.background": "#007ACC",
			"dropdown.background": "#0d0e13",
			"dropdown.border": "#0d0e13",
			"editor.background": "#0D1017",
			"editor.foreground": "#c7c9d1",
			"editor.hoverHighlightBackground": "#ef835422",
			"editor.lineHighlightBackground": "#171922",
			"editor.selectionBackground": "#2a388865",
			"editor.wordHighlightBackground": "#ffffff22",
			"editor.wordHighlightStrongBackground": "#6e81a022",
			"editorGroupHeader.tabsBackground": "#212431",
			"editorGutter.addedBackground": "#a7da1e",
			"editorGutter.deletedBackground": "#e61f44",
			"editorGutter.modifiedBackground": "#f7b83d",
			"editorIndentGuide.activeBackground": "#3f4157",
			"editorIndentGuide.background": "#252735",
			"editorLink.activeForeground": "#007ACC",
			"editorOverviewRuler.addedForeground": "#a7da1e",
			"editorOverviewRuler.deletedForeground": "#e61f44",
			"editorOverviewRuler.errorForeground": "#e61f44",
			"editorOverviewRuler.findMatchForeground": "#6e81a055",
			"editorOverviewRuler.infoForeground": "#9d37fc",
			"editorOverviewRuler.modifiedForeground": "#f7b83d",
			"editorOverviewRuler.warningForeground": "#f7b83d",
			"editorSuggestWidget.foreground": "#c7c9d1",
			"editorSuggestWidget.highlightForeground": "#007ACC",
			"editorSuggestWidget.selectedBackground": "#3a3e56",
			"editorSuggestWidget.selectedForeground": "#c7c9d1",
			"editorWidget.background": "#262837",
			"editorWidget.border": "#3a3e56",
			"editorWidget.foreground": "#c7c9d1",
			"input.background": "#07070a",
			"input.border": "#303347",
			"input.foreground": "#ffffff",
			"input.placeholderForeground": "#363950",
			"list.activeSelectionBackground": "#3a3e56",
			"list.activeSelectionForeground": "#c7c9d1",
			"list.dropBackground": "#252735",
			"list.focusBackground": "#303347",
			"list.hoverBackground": "#171922",
			"list.inactiveSelectionBackground": "#111219",
			"menu.background": "#262837",
			"menu.foreground": "#c7c9d1",
			"menu.selectionBackground": "#3a3e56",
			"notifications.foreground": "#ffffff",
			"panel.background": "#15161f",
			"panel.border": "#3a3e56",
			"panelTitle.inactiveForeground": "#767ca2",
			"peekView.border": "#007ACC",
			"peekViewEditor.background": "#09090d",
			"peekViewEditor.matchHighlightBackground": "#6e81a055",
			"peekViewEditorGutter.background": "#0d0e13",
			"peekViewResult.background": "#1b1d28",
			"peekViewResult.fileForeground": "#f5f5f5",
			"peekViewResult.lineForeground": "#e6e6e6",
			"peekViewResult.matchHighlightBackground": "#6e81a055",
			"peekViewResult.selectionBackground": "#15161f",
			"peekViewResult.selectionForeground": "#ffffff",
			"peekViewTitle.background": "#0d0e13",
			"peekViewTitleDescription.foreground": "#f7f7f7",
			"peekViewTitleLabel.foreground": "#ffffff",
			"scrollbar.shadow": "#000000",
			"sideBar.background": "#1b1d28",
			"sideBarSectionHeader.background": "#222331",
			"statusBar.background": "#2a2b3c",
			"statusBar.debuggingBackground": "#5b6d8b",
			"tab.inactiveBackground": "#212431",
			"titleBar.activeBackground": "#09090d",
			"tree.indentGuidesStroke": "#3f4157"
		}
	},
	// distinguish enum, interface, and struct
	"editor.semanticTokenColorCustomizations": {
		"[Default Dark+]": {
			"rules": {
				"enum": "#b8d7a3",
				"interface": "#b8d7a3",
				"struct": "#86C691"
			}
		}
	},
	// exclude from fuzzy finder
	"search.exclude": {
		"**/.git": true,
		"**/.nuxt": true,
		"**/.svelte-kit": true,
		"**/.output": true,
		"**/.pnpm": true,
		"**/.vscode": true,
		"**/.yarn": true,
		"**/bower_components": true,
		"**/dist/**": true,
		"**/logs": true,
		"**/node_modules": true,
		"**/out/**": true,
		"**/package-lock.json": true,
		"**/pnpm-lock.yaml": true,
		"**/tmp": true,
		"**/yarn.lock": true
	},
	// languages
	"files.associations": {
		"*.svx": "markdown",
		".env*": "makefile"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// rust analyzer
	"rust-client.engine": "rust-analyzer",
	"rust.clippy_preference": "on",

	"color-highlight.languages": [
		"javascript",
		"typescript",
		"javascriptreact",
		"typescriptreact"
	],
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"git.showPushSuccessNotification": true,
	"notebook.lineNumbers": "on",
	"notebook.output.textLineLimit": 0,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.expand": false,
	"explorer.fileNesting.patterns": {
		".env": ".env, .env.example",
		".gitignore": ".gitignore, .dockerignore",
		"vite.config.ts": "vitest.config.js, vitest.config.ts, vite.config.js, vite.config.ts",
		"tsconfig.json": "tsconfig.json, jsconfig.json",
		"*.csproj": "*.csproj, nuget.config"
	},
	"editor.bracketPairColorization.enabled": false,
	"typescript.updateImportsOnFileMove.enabled": "always",

	"editor.unicodeHighlight.ambiguousCharacters": false,
	"window.customMenuBarAltFocus": false,
	"workbench.colorTheme": "GitHub Light Colorblind (Beta)",
	"editor.tabSize": 2,
	"editor.fontLigatures": true,
}
